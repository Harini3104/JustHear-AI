{
  "manifest_version": 3,
  "name": "JustHear",
  "version": "1.0",
  "description": "Reads, summarizes, translates, and proofreads web pages using Chrome Built-in AI.",
  "permissions": ["activeTab", "tts", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "48": "icon48.png" }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
